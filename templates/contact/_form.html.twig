{{ form_start(form) }}
    <div class="mb-3 row">
        <div class="col-md-6">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.email) }}{{ form_widget(form.email) }}
        </div>
    </div>
 
    <div class="mb-3 row">
        <div class="col-md-6">
            {{ form_label(form.contact_perso) }} {{ form_widget(form.contact_perso) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.contact_pro) }}{{ form_widget(form.contact_pro) }}
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-md-6">
            {{ form_label(form.organisation) }} {{ form_widget(form.organisation) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.function) }}{{ form_widget(form.function) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.parent) }}
            {{ form_widget(form.parent) }}
    </div>

    {{ form_widget(form) }}
    <div class="container d-flex justify-content-end">
        <button class="btn btn-primary ">{{ button_label|default('Enregistrer') }}</button>
    </div>
    {{ form_rest(form) }}

{{ form_end(form) }}
