{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Contact</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ contact.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ contact.email }}</td>
                    </tr>
                    <tr>
                        <th>Contact_perso</th>
                        <td>{{ contact.contactPerso }}</td>
                    </tr>
                    <tr>
                        <th>Contact_pro</th>
                        <td>{{ contact.contactPro }}</td>
                    </tr>
                    <tr>
                        <th>Organisation</th>
                        <td>{{ contact.organisation }}</td>
                    </tr>
                    <tr>
                        <th>Function</th>
                        <td>{{ contact.function }}</td>
                    </tr>
                </tbody>
            </table>

              <div class="container d-flex justify-content-end">
                <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-primary mx-2">Modifier</a>
                {{ include('contact/_delete_form.html.twig') }} 
              </div>    
          
        </div>
    </div>
{% endblock %}
