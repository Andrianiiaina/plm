{% extends 'base.html.twig' %}

{% block title %}ContactGroup{% endblock %}

{% block body %}
<div class="container mt-3">

    <h1> Liste des contacts du groupe <b>{{ group.Name }}</b></h1>
         {{ include('contact/_list_contact.html.twig',{contacts:group.contacts}) }}
   
    <div class="container d-flex">
        <form method="post" action="{{ path('app_contact_group_delete', {'id': group.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
            <button class="btn">Supprimer</button>
        </form>
        
        <a href="{{ path('app_contact_group_edit', {'id': group.id}) }}" class="btn">Modifier le groupe</a>
    </div>

</div>
{% endblock %}
