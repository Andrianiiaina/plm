{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <div class="container">
     <p class="h2">Appel d'offres archivés</p>
        <div class="table-responsive">
            <table class="table mt-3">
             <thead>
                 <tr>
                     <th>Réf</th>
                     <th class="col-md-3">Titre</th>
                     <th>Informations</th>
                     <th>Status</th>
                     <th class=""></th>
                 </tr>
             </thead>
             <tbody>
             {% for tender in tenders %}
                 <tr>
                     <td>{{ tender.contractNumber }}</td>
                     <td>{{ tender.title }}</td>
                     <td>{{ tender.description }}</td>
                     <td><span class="badge bg-{{tender.status | getStatusColor}}">{{tender.status | getTenderStatus}}</span></td> 
                     <td class="btn-group">

                         {% if is_granted('ROLE_ADMIN') %}
                            <form method="post" action="{{ path('app_tender_delete', {'id': tender.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tender?');">
                                 <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tender.id) }}">
                                 <button class="btn"><i class="bi bi-trash3-fill"></i></button>
                             </form>
                         {% endif %}
                        <form method="post" action="{{ path('app_tender_archive', {'id': tender.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tender?');">
                                 <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ tender.id) }}">
                                 <button class="btn"><i class="bi bi-file-earmark-arrow-up"></i>Reset</button>
                        </form>
                     </td>
                 </tr>
             {% else %}
                 <tr>
                     <td colspan="13">Aucun appel d'offre pour le moment.</td>
                 </tr>
             {% endfor %}
             </tbody>
         </table> 
        </div>
        <div class="row mt-3">
            <p class="h2">Documents archivés</p>
            {% for document in documents %}
                <div class="col-md-4">
                    <a href="{{path('app_document_show', {'id':document.id})}}" class="list-group-item list-group-item-action pb-3" aria-current="true">
                        <span class="fw-medium text-reset">{{ document.name | u.truncate(40, '...')}}</span><br/>
                        <span class="text-body-secondary">{{document.tender.title| u.truncate(40, '...')}}</span> 
                        <br/>
                        <small class="text-{{document.status | getStatusColor}}"> {{document.responsable.email}}</small>
                    </a>
                    <div class="btn-group">
                         {{ include('document/_delete_form.html.twig') }}
                    <form method="post" action="{{ path('app_document_archive', {'id': document.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir restaurer ce document?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ document.id) }}">
                        <button class="btn">Restaurer</button>
                    </form>
                    </div>
                </div>
            {% else %}
            {% endfor %}
        </div>
       
    </div>

{% endblock %}