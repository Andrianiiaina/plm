{% extends 'base.html.twig' %}

{% block title %}Allotissement{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="offset-3 col-md-6">
            <h1>Allotissement</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Number</th>
                        <td>{{ allotissement.number }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ allotissement.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ allotissement.description }}</td>
                    </tr>
                    <tr>
                        <th>MinBudget</th>
                        <td>{{ allotissement.minBudget }}</td>
                    </tr>
                    <tr>
                        <th>MaxBudget</th>
                        <td>{{ allotissement.maxBudget }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_allotissement_edit', {'id': allotissement.id}) }}" class="btn text-secondary">Modifier</a>

            {{ include('allotissement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
