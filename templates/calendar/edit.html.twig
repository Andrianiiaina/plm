{% extends 'base.html.twig' %}

{% block title %}Modifier|Calendrier{% endblock %}

{% block body %}
    <h1>Modification</h1>
        {{ form_start(form) }}
            <div class="mb-3 row">
                <div class="col-md-4">
                    {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                </div>
                <div class="col-md-2">
                    {{ form_label(form.beginAt) }}
                    {{ form_widget(form.beginAt) }}
                    {{ form_errors(form.beginAt) }}
                </div>
                <div class="col-md-2">
                    {{ form_label(form.endAt) }}
                    {{ form_widget(form.endAt) }}
                    {{ form_errors(form.endAt) }}
                </div>
                <div class="col-md-2">
                    {{ form_label(form.tender) }}
                    {{ form_widget(form.tender) }}
                    {{ form_errors(form.tender) }}
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary mt-4">{{ button_label|default('Modifier') }}</button>
                </div>

            </div>
            {{ form_rest(form) }}

        {{ form_end(form) }}



{% endblock %}
