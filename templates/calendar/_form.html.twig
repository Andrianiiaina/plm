
{{ form_start(form) }}

<div class="mb-3 row">
    <div class="col-md-4">
        {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
    </div>
    <div class="col-md-2">
        {{ form_label(form.beginAt) }}
        {{ form_widget(form.beginAt) }}
    </div>
    <div class="col-md-2">
        {{ form_label(form.endAt) }}{{ form_widget(form.endAt) }}
    </div>
    <div class="col-md-2">
        {{ form_label(form.tender) }}{{ form_widget(form.tender) }}
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary mt-4">{{ button_label|default('Enregistrer') }}</button>
    </div>

</div>
{{ form_rest(form) }}

{{ form_end(form) }}
