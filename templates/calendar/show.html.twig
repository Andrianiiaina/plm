{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ calendar.title }}</td>
            </tr>
            <tr>
                <th>BeginAt</th>
                <td>{{ calendar.beginAt ? calendar.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ calendar.endAt ? calendar.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
           
        </tbody>
    </table>
{% endblock %}
