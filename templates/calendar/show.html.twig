{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
    <h1>Calendrier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ calendar.title }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ calendar.beginAt ? calendar.beginAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ calendar.endAt ? calendar.endAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
           
        </tbody>
    </table>
{% endblock %}
