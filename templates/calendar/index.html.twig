{% extends 'base.html.twig' %}

{% block title %}New Calendar{% endblock %}

{% block body %}
   <div class="row">
    <div class=" offset-1 col-md-10">
        <div class="card card-body ">
            <p class="h3">Ajouter un event</h1>

            {{ include('calendar/_form.html.twig') }}

            <p>
             


        </div>
        </div>
    <div class="offset-1 col-md-10 mt-5">
        <p class="h2">Agenda</p>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Projet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.title }}</td>
                <td>{{ calendar.beginAt ? calendar.beginAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ calendar.endAt ? calendar.endAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ calendar.tender.title }}</td>
                <td class="btn-group">
                    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}" class="btn"><i class="bi bi-pencil-fill"></i></a>
                    <form method="post" action="{{ path('app_calendar_delete', {'id': calendar.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_calendar' ~ calendar.id) }}">
                        <button class="btn"><i class="bi bi-trash3-fill"></i></button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
   </div>


 


{% endblock %}
