{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}
{% block navbar %}
    {{ include('components/tender_navbar.html.twig',{'tender_id':document.tender.id})}}
{% endblock %}
{% block body %}
        <div class="container">
            <div class="clearfix">
                <strong class="h2 float-start mb-4">{{ document.name }}</strong>
                <span class="mx-4 badge text-bg-{{ document.status| getStatusColor}}"> {{ document.status | getDocumentStatus}}</span>
                <div class="float-end d-flex">
                    <a href="{{ path('app_document_edit', {'id': document.id}) }}" class="btn text-primary mx-1">
                        Modifier
                    </a>
                    {{ include('document/_delete_form.html.twig') }}
                 

                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p> <a class="icon-link" href="{{ asset('uploads/tender_documents/' ~ document.filepath| e('html')) }}">
                        <i class="bi bi-eye-fill"></i>
                        Voir le contenu: {{ document.filename}}
                    </a></p>
                
                    <p><strong>Projet: </strong><i><a href="{{path('app_tender_show', {'id': document.tender.id})}}" class="link-secondary link-underline link-underline-opacity-0">{{document.tender.title}}</a></i></p>
                    
                    <p> <strong>responsable: </strong> {{document.responsable.email}}</p>

                    <p><strong>Information: </strong> {{ document.information }}</p>
                <p><strong>Date linite:</strong> <span class="{{ document.limitDate| highlight }}">{{ document.limitDate ? document.limitDate|date('d F Y') : 'non d√©finit' }}</span></p>
                </div>
                <div class="col-md-8">
                    {% if document.filepath %}
                        <a href="{{ asset('uploads/tender_documents/' ~ document.filepath| e('html')) }}" width="100%" height="200%" title="{{ document.filename}}" frameborder='0'>lien si word</a>
                    {% else %}
                        <iframe src="{{ asset('uploads/tender_documents/' ~ document.filepath| e('html')) }}" width="100%" height="200%" title="{{ document.filename}}" frameborder='0'></iframe>
                    {% endif%}
                    
                </div>
            </div>
        
   </div>
{% endblock %}
