{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}
{% block navbar %}
    {{ include('components/tender_navbar.html.twig',{'tender_id':tender.id})}}
{% endblock %}
{% block body %}
  <div class="container">
    <div class="row">
		<p class="h2">Document du projet {{tender.title}}</p>
    <a href="{{path('app_document_tender_new',{'id':tender.id})}}" class="btn btn-primary col-2 mx-2 mb-4">Suivre un document</a>
    <div class="row mt-2">
        {% for status, documents in groupedDocuments %}
              <div class="col p-1">
                  <div class="card border-{{status | getStatusColor}}">
                    <div class="card-header text-{{status | getStatusColor}}">
                      <p class="h4"> {{status | getDocumentStatus}}</p>
                    </div>
                      <div class="list-group" data-controller="sortable" data-sortable-group-value="{{status}}" data-group="{{status}}">
                        {% for document in documents %}
                        <div class="card"  data-id="{{document.id}}">
                            <a href="{{ asset('uploads/tender_documents/' ~ document.filepath| e('html')) }}" class="list-group-item list-group-item-action" aria-current="true">
                              {{ document.filename}}  <br/>
                              <small class="fw-medium text-reset">{{ document.name | u.truncate(40, '...')}}</small>
                              <br/>
                            </a>
                            <a href="{{path('app_document_edit', {'id':document.id})}}" data-id="{{document.id}}" class="btn text-{{status | getStatusColor}} clearfix" aria-current="true">
                              <small class="float-start">@{{document.responsable.email}}</small>
                              <span class="float-end">Modifier</span>
                            </a>
                        </div>
                        
                       
                        {% else %}
                        {% endfor %}
                      </div>
                  </div>
                 
            </div>
						{% else %}
							<small>Aucun document pour le moment.</small>
						{% endfor %}
					</div>
    </div>
  </div>
{% endblock %}
