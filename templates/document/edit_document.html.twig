<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Édition du document - {{ filename }}</title>
    <script type="text/javascript" src="http://localhost/web-apps/apps/api/documents/api.js"></script>
</head>
<body>
    <h1>Édition de {{ filename }}</h1>
    <div id="editor" style="width: 100%; height: 800px;"></div>

    <script>
        var docEditor = new DocsAPI.DocEditor("editor", {
            documentType: "word",  
            document: {
                fileType: "docx",  
                key: "{{ filename }}", 
                title: "{{ filename }}",
                url: "{{ documentUrl }}",
            },
            editorConfig: {
                callbackUrl: "{{ callbackUrl }}",
                mode:"view",
               
            },
            token:"{{token}}"
        });
    </script>
</body>
</html>
