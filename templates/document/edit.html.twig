{% extends 'base.html.twig' %}

{% block title %}Edit Document{% endblock %}

{% block body %}
   <div class="container">
    <div class="row">
        <div class="offset-3 col-md-6">
            
        <h1>Modifier le document</h1>
        
        {{ form_start(form) }}

                <div class="mb-3 row">
                    {{ form_label(form.tender) }}
                        {{ form_widget(form.tender) }}
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.responsable) }}{{ form_widget(form.responsable) }}
                    </div>
                </div>
                <div class="mb-3 row">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <p class="h4">
                    Fichier actuel: {{ document.filename }}
                </p>
                <div class="mb-3 row">
                    A remplacer par:
                    {{ form_widget(form.filepath) }}
                </div>
                    {{ form_widget(form) }}
                    {{ form_rest(form) }}

                    <button class="btn btn-primary col-3">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}

        </div>
    </div>
   </div>
{% endblock %}
