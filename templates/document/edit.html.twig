{% extends 'base.html.twig' %}

{% block title %}Edit Document{% endblock %}

{% block navbar %}
    {{ include('components/tender_navbar.html.twig',{'tender_id':document.tender.id})}}
{% endblock %}

{% block body %}
   <div class="container">
    <div class="row">
        <div class="offset-3 col-md-6">
            
        <h1>Modifier le document</h1>
        
        {{ form_start(form) }}
                <div class="mb-3 row">
                    <div class="col-md-6">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.responsable) }}{{ form_widget(form.responsable) }}
                    </div>
                </div>
                <div class="mb-3 row">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="mb-3 row">
                    Fichier actuel:
                    <p class="h6">
                        <a class="icon-link" href="{{ asset('uploads/tender_documents/' ~ document.filepath| e('html')) }}">{{ document.filename }}</a>
                    </p>
                </div>
                
                <div class="mb-3 row">
                    A remplacer par:
                    {{ form_widget(form.filepath) }}
                </div>
                <div class="mb-3 row">
                    {{ form_label(form.information) }}
                    {{ form_widget(form.information) }}

                </div>
                
                    {{ form_rest(form) }}

                    <button class="btn btn-primary col-3">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}

        </div>
    </div>
   </div>
{% endblock %}
