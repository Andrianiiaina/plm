{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
          
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.status.label }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ task.startDate ? task.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ task.endDate ? task.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>rate</th>
                <td>{{ task.rate }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
