{% extends 'base.html.twig' %}

{% block title %}Milestone{% endblock %}

{% block body %}
    <p class="h3">Milestone: {{ milestone.name }}, 
        prevu le {{ milestone.dueDate ? milestone.dueDate|date('Y-m-d') : '' }}.
          Fini à {{milestone.getProgress()}}%</p>
    <a href="{{path('app_task_new',{'id':milestone.id})}}">Ajouter une tache</a>

    <table class="table">
        <thead>
           <tr>
            <th>Nom</th>
            <th>Status</th>
            <th>Points</th>
            <th>debut estimé</th>
            <th>Fin estimé</th>
            <th></th>
           </tr>
        </thead>
        <tbody>
            {% for task in milestone.tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.status.label }}</td>
                <td>{{ task.rate}}</td>
                <td>{{ task.startDate ? task.startDate|date('d/m/Y') : '' }}</td>
                <td>{{ task.endDate ? task.endDate|date('d/m/Y') : '' }}</td>
        
                <td class="btn-group">
                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn"><i class="bi bi-eye-fill"></i></a>
                 
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn"><i class="bi bi-pencil-fill"></i></a>
                        {{ include('task/_delete_form.html.twig') }}
                   
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">aucun</td>
                </tr>
            {% endfor %}
        </tbody>
       </table>

{% endblock %}
