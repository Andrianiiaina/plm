{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row my-5">
            <div class="clearfix">
                <p class="h2 float-start">Projets</p>
                <a href="{{ path('app_project_new') }}" class="btn btn-primary col-1 my-2 float-end"> + Cr√©er</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Budget</th>
                        <th>Progression</th>
                        <th>Deadline</th>
                        <th>Responsable</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.title }}</td>
                        <td>{{ project.budget }}</td>
                        <td>{{ project.getProgress }}%</td>
                        <td>{{ project.deadline ? project.deadline|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ project.responsable.email }}</td>

                        <td class="btn-group">
                            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn"><i class="bi bi-eye-fill"></i></a>
                         
                                <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn"><i class="bi bi-pencil-fill"></i></a>
                                {{ include('project/_delete_form.html.twig') }}
                           
                        </td>
                    </tr>
                   
                {% else %}
                    <tr>
                        <td colspan="5">aucun</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
</div>

{% endblock %}
