{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <div class="row">
        <p class="h3">{{project.title}} à {{project.getProgress}}</p>
    </div>
    <div class="clearfix mb-2">
        <p class="h4 float-start">Listes des milestone</p>
        <a href="{{path('app_milestone_new',{'id':project.id})}}" class="btn float-end">Ajouter un Milestone</a>
    </div>
   <table class="table">
    <thead>
       <tr>
        <th>Nom</th>
        <th>Nbr de tache</th>
        <th>Progression</th>
        <th>Poids</th>
        <th>Status</th>
        <th>Fin estimé</th>
       </tr>
    </thead>
    <tbody>
        {% for milestone in project.milestones %}
        <tr>
            <td>{{ milestone.name }}</td>
            <td><a href="{{ path('app_milestone_show', {'id': milestone.id}) }}" class="btn">{{ milestone.getTasks | length }} taches</a></td>
            <td>{{ milestone.getProgress }}%</td>
            <td>{{ milestone.rate }}</td>
            <td>{{ milestone.status.label }}</td>
            <td>{{ milestone.dueDate ? milestone.dueDate|date('d/m/Y') : '' }}</td>
    
            <td class="btn-group">
                <a href="{{ path('app_milestone_show', {'id': milestone.id}) }}" class="btn"><i class="bi bi-eye-fill"></i></a>
             
                    <a href="{{ path('app_milestone_edit', {'id': milestone.id}) }}" class="btn"><i class="bi bi-pencil-fill"></i></a>
                    {{ include('milestone/_delete_form.html.twig') }}
               
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun</td>
            </tr>
        {% endfor %}
    </tbody>
   </table>

{% endblock %}
