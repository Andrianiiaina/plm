{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="container">
       <div class="row p-3">
            <div class="clearfix">
                <strong class="h2 float-start mb-4">Projet {{ project.title }}.</strong>
                <div class="float-end d-flex">
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary mx-1">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    {{ include('project/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="row px-4">
                <div class="col">
                    <dl class="row">
                       

                        <dt class="col-sm-4">Titre du projet</dt>
                        <dd class="col-sm-8">{{ project.title }}.</dd>
                    
                        <dt class="col-sm-4">Numero</dt>
                        <dd class="col-sm-8">{{ project.contractNumber }}</dd>
                    
                        <dt class="col-sm-4">Localisation</dt>
                        <dd class="col-sm-8">{{ project.location }}</dd>
                       
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                           {% set project_status = get_project_status(project.status)%}
                            <td>{{project_status}}</td>  
                        </dd>
                        
                        <dt class="col-sm-4">Type du projet</dt>
                        <dd class="col-sm-8">
                            {% set project_type = get_project_type(project.projectType)%}
                            <td>{{project_type}}</td> 
                        </dd>

                        
                        <dt class="col-sm-4">Url</dt>
                        <dd class="col-sm-8">{{ project.url }}.</dd>
                    </dl>
                </div>
            
            <div class="col">
                <div class="p-3 row">
                    <dt class="col-sm-4">Date de début</dt>
                    <dd class="col-sm-8">{{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '' }}.</dd>
                    <dt class="col-sm-4">Date de fin</dt>
                    <dd class="col-sm-8">{{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '' }}.</dd>
                  
                    <dt class="col-sm-4">Budget minimum</dt>
                    <dd class="col-sm-8">{{ project.minBudget }}.</dd>
                    <dt class="col-sm-4">Budget maximum</dt>
                    <dd class="col-sm-8">{{ project.maxBudget }}.</dd>
                  
                    <dt class="col-sm-4 text-truncate">Description</dt>
                    <dd class="col-sm-8">{{ project.description }}.</dd>
                </div>
            </div>
            </div>
       </div>
       

      <div class="row p-3">
        <div class="clearfix mb-2">
            <strong class="h4 float-start">Fichiers associés</strong>
            <button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#addFileModal">
                Ajouter d'autres fichiers
            </button>
        </div>
        <ol class="list-group">
            {% for file in project.files %}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">
                        <a href="{{ asset('uploads/project_tas/' ~ file.filepath| e('html')) }}">{{ file.filename }}</a>
                    </div>
                    url: {{ file.url }}
                </div>

                    <a href="{{path('app_file_edit', {'id': file.id}) }}" class="btn">Modifier</a>
                    {{ include('file/_delete_form.html.twig') }}
                </li>
            {% else %}
            <p>Aucun fichier.</p>
            {% endfor %}
        </ol>
   </div>
    

  <div class="modal fade" id="addFileModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="addFileModalLabel">Ajouter des fichiers</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        {{ form_start(form) }}
        <div class="modal-body">
                {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>

{% endblock %}
