{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="offset-3 col-6">
            
                <div class="card p-5">
                    <div class="card-body">
                        <form action="{{ path('app_login') }}" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                    
                            <p class="h1 mb-3 font-weight-normal">Login</p>
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control mb-3" autocomplete="current-password" required>
                    
                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        
                    
                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                    
                                <div class="checkbox mb-3">
                                    <input type="checkbox" name="_remember_me" id="_remember_me">
                                    <label for="_remember_me">Remember me</label>
                                </div>
                            #}
                                
                                <div class="d-flex justify-content-between  mt-2">
                                    <button class="btn btn-primary" type="submit">
                                    Se connecter
                                    </button>
                                    <small>Je n'ai pas encore de compte, <a href="{{ path('app_register') }}">m'inscrire</a></small>
                                </div>
                          
                          
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
